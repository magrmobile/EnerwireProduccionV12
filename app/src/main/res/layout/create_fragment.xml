<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create.CreateFragment">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/tvCode"
                    style="@style/label_form"
                    android:text="@string/label_code"/>
                <Spinner
                    android:id="@+id/spinnerCode"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/spinner_outline"/>
                <TextView
                    android:id="@+id/tvStopType"
                    style="@style/label_form"
                    android:text="@string/label_stop_type"/>
                <TextView
                    android:id="@+id/etStopType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:paddingStart="16dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    tools:text="Programado" />
                <TextView
                    android:id="@+id/tvOperator"
                    style="@style/label_form"
                    android:text="@string/label_operator"/>
                <Spinner
                    android:id="@+id/spinnerOperator"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:background="@drawable/spinner_outline"/>
                <TextView
                    android:id="@+id/tvProduct"
                    style="@style/label_form"
                    android:text="@string/label_product"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <gcubeit.com.enerwireproduccionv13.util.SearchableSpinner
                    android:id="@+id/spinnerProduct"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintText="@string/spinner_title_product"
                    android:padding="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:background="@drawable/spinner_outline"/>
                <TextView
                    android:id="@+id/tvColor"
                    style="@style/label_form"
                    android:text="@string/label_color"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <Spinner
                    android:id="@+id/spinnerColor"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/tvConversion"
                    style="@style/label_form"
                    android:text="@string/label_conversion"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spinnerConversion"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:padding="8dp"/>
                <TextView
                    android:id="@+id/tvQuantity"
                    style="@style/label_form"
                    android:text="@string/label_quantity"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    tools:ignore="LabelFor"
                    tools:text="2"
                    android:textSize="16sp"
                    tools:visibility="visible" />
                <TextView
                    android:id="@+id/tvMeters"
                    style="@style/label_form"
                    android:text="@string/label_meters"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <EditText
                    android:id="@+id/etMeters"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:textColor="@android:color/white"
                    android:paddingStart="16dp"
                    tools:text="100"
                    android:textSize="16sp"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    tools:ignore="LabelFor"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <TextView
                    android:id="@+id/tvComments"
                    style="@style/label_form"
                    android:text="@string/label_comments"/>
                <EditText
                    android:id="@+id/etComments"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_outline"
                    android:textColor="@android:color/white"
                    android:paddingStart="16dp"
                    android:textSize="16sp"
                    tools:text="Comentario de Prueba"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    tools:ignore="LabelFor" />
                <TextView
                    style="@style/label_form"
                    android:text="@string/label_start_datetime_stop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/spinner_outline">
                    <TextView
                        android:id="@+id/tvConfirmStartDateStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        tools:text="29, Noviembre 2021 "/>
                    <TextView
                        android:id="@+id/tvConfirmStartTimeStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:textAlignment="textStart"
                        tools:text="12:00:05 a.m."/>
                </LinearLayout>
                <TextView
                    style="@style/label_form"
                    android:text="@string/label_end_datetime_stop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/spinner_outline">
                    <TextView
                        android:id="@+id/tvConfirmEndDateStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        tools:text="29, Noviembre 2021 "/>
                    <TextClock
                        android:id="@+id/txClock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:format12Hour="hh:mm:ss a"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="11:00:05 a.m."/>
                    <TextView
                        android:id="@+id/hiddenStartDateTimeStop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/hiddenEndDateTimeStop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:text="@string/btn_cancel"
                        android:layout_margin="8dp"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_cancel"
                        app:iconTint="@android:color/holo_red_dark"/>
                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:text="@string/btn_next"
                        android:layout_margin="8dp"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        app:iconTint="@android:color/holo_blue_dark"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</layout>