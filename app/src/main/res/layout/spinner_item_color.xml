<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/image_view_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_color"
        android:contentDescription="@string/spinner_icon_color_image_description"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/text_view_color_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/image_view_color"
        android:layout_toEndOf="@+id/image_view_color"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="BLC"/>
</RelativeLayout>